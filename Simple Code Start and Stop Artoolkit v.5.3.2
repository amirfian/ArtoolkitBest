using System.IO;
using System.Runtime.InteropServices;
using System.Threading;

public class StartStop : MonoBehaviour{

	public GameObject Artoolkit;
	ARController arController;

	public void Awake(){
		arController = Artoolkit.GetComponent<ARController>();//Here you need to look up the ARController object
	}

	public void CekStop(){
		arController.StopAR ();
	}

	public void CekStart(){
		arController.StartAR();
	}

}
